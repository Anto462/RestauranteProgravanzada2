@page
@model LoginModel

@{

    ViewData["Title"] = "Inicio de sesión";

}

 

<h1>@ViewData["Title"]</h1>

<div class="row">

    <div class="col-md-4">

        <section  class="miRegistro">

            <form id="account" method="post">

                <h2 class="h2-login">Ingresa a tu cuenta.</h2>

                <hr />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-floating">

                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />

                    <label asp-for="Input.Email" class="form-label"></label>

                    <span asp-validation-for="Input.Email" class="text-danger"></span>

                </div>

                <div class="form-floating">

                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />

                    <label asp-for="Input.Password" class="form-label"></label>

                    <span asp-validation-for="Input.Password" class="text-danger"></span>

                </div>

                <div>

                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Inciar Sesión</button>

                </div>

                <div>

                    <p>

                        <a id="forgot-password" asp-page="./ForgotPassword">Olvido su contraseña?</a>

                    </p>

                    <p>

                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrar mi cuenta</a>

                    </p>

                    <p>

                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar correo electronico de confirmación</a>

                    </p>


                    <label asp-for="Input.RememberMe" class="text-dark">

                        <input class="text-dark" asp-for="Input.RememberMe" />

                        @Html.DisplayNameFor(m => m.Input.RememberMe)

                    </label>

                </div>

            </form>

        </section>

    </div>

