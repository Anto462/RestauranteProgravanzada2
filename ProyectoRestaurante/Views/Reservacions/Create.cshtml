@model ProyectoRestaurante.Models2.Reservacion

@{
    ViewData["Title"] = "Create";
}

<section class="reservas">
    <br>
    <br>
    <br>
    <h1>꧁Confirma tu reservacion꧂</h1>
    <br>
    <div class="row centrar">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div hidden class="form-group">
                    <label asp-for="Id" class="control-label"></label>
                    <select asp-for="Id" class="form-control" asp-items="ViewBag.Id"></select>
                </div>
                <div class="form-group">
                    <label asp-for="FechaReserva" class="control-label"></label>
                    <input asp-for="FechaReserva" class="form-control" />
                    <span asp-validation-for="FechaReserva" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HoraReserva" class="control-label"></label>
                    <input asp-for="HoraReserva" class="form-control" />
                    <span asp-validation-for="HoraReserva" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CantidadPersonas" class="control-label"></label>
                    <input asp-for="CantidadPersonas" class="form-control" />
                    <span asp-validation-for="CantidadPersonas" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdMesa" class="control-label"></label>
                    <select asp-for="IdMesa" class="form-control" asp-items="ViewBag.IdMesa"></select>
                </div>
                <br>
                <div class="form-group">
                    <input type="submit" value="Reservar" class="btn btn-dark" />
                </div>
            </form>
        </div>
    </div>
    <br>
    <div>
        <a class="btn btn-dark" asp-action="IngresarCapacidad">Volver</a>
    </div>
</section>

