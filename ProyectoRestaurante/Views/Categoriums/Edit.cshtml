@model ProyectoRestaurante.Models2.Categorium

@{
    ViewData["Title"] = "Edit";
}

<h4>Modificar categoria</h4>
<hr />
<div class="row centrar">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCategoria" />
            <div class="form-group">
                <label asp-for="NombreCat" class="control-label"></label>
                <input asp-for="NombreCat" class="form-control" />
                <span asp-validation-for="NombreCat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-dark">Volver</a>
</div>

