@model IEnumerable<ProyectoRestaurante.Models2.Orden>

@{
    ViewData["Title"] = "Index";
}


<!DOCTYPE html>


<section class="tables">
    <h1 style="text-shadow: -1px 0px 6px #D4AF37;">Ordenes</h1>

    <p>
        <a asp-action="Create" class="btn btn-dark">Añadir</a>
    </p>
    <form method="get" asp-action="Index">
    <div class="buscadores input-group" style="text-size-adjust">
        <input type="search" placeholder="Buscador" value="@ViewData["GetOrdenessdetails"]" name="search"
               style="width: 500px" class="input form-control" />
        <div class="input-group-append">
            <input type="submit" value="Buscar" class="btn btn-dark" />
        </div>
    </div>
</form>

<br>
    <table class="table table-dark table-striped table-hover table-bordered border-light">
        <thead>
            <tr>
                <th class="table-dark">
                    Numero de Orden
                </th>
                <th class="table-dark">
                    @Html.DisplayNameFor(model => model.FechaOrden)
                </th>
                <th class="table-dark">
                    @Html.DisplayNameFor(model => model.IdMesaNavigation)
                </th>
                <th class="table-dark">
                    Atendido por:
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var fecha = item.FechaOrden.ToShortDateString();
                <tr>
                    <td class="table-dark">
                        @Html.DisplayFor(modelItem => item.IdOrden)
                    </td>
                    <td class="table-dark">
                        @Html.DisplayFor(modelItem => fecha)
                    </td>
                    <td class="table-dark">
                        @Html.DisplayFor(modelItem => item.IdMesaNavigation.IdMesa)
                    </td>
                    <td class="table-dark">
                        @Html.DisplayFor(modelItem => item.IdNavigation.UserName)
                    </td>
                    <td>
                        <a class="btn btn-dark" asp-action="Edit" asp-route-id="@item.IdOrden">Editar</a> |
                        <a class="btn btn-dark" asp-action="Delete" asp-route-id="@item.IdOrden">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br>
    <br>
</section>

