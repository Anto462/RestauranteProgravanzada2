@model ProyectoRestaurante.Models2.Orden

<!DOCTYPE html>

<section>
    <h1 style="text-shadow: -1px 0px 6px #D4AF37;">Crear</h1>

    <h4>Orden</h4>
    <hr />
    <div class="row centrar">
        <div class="col-md-4">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Id" class="control-label"></label>
                    <select asp-for="Id" class="form-control" asp-items="ViewBag.Id"></select>
                </div>
                <div class="form-group">
                    <label asp-for="IdMesa" class="control-label"></label>
                    <select asp-for="IdMesa" class="form-control" asp-items="ViewBag.IdMesa"></select>
                </div>
                <div class="form-group">
                    <label asp-for="FechaOrden" class="control-label"></label>
                    <input asp-for="FechaOrden" class="form-control" />
                    <span asp-validation-for="FechaOrden" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <br>

    <div>
        <a asp-action="Index" class="btn btn-dark">Volver</a>
    </div>
</section>
