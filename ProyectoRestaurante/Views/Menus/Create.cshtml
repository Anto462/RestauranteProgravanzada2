@model ProyectoRestaurante.Models2.Menu

@{
    ViewData["Title"] = "Create";
}

<section>
    <h1 style="text-shadow: -1px 0px 6px #D4AF37;">Crear</h1>

    <h4>Platillo</h4>
    <hr />
<div class="row centrar">
    <div class="col-md-4">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombrePlato" class="control-label"></label>
                <input asp-for="NombrePlato" class="form-control" />
                <span asp-validation-for="NombrePlato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
    <label asp-for="IdCategoria" class="control-label"></label>
    @Html.DropDownListFor(model => model.IdCategoria, (SelectList)ViewData["Categorias"], "Seleccione una categoría", new { @class = "form-control" })
    <span asp-validation-for="IdCategoria" class="text-danger"></span>
</div>
                <br>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>
    <br>

<div>
   <a asp-action="Index" class="btn btn-dark">Volver</a>
</div>
</section>

