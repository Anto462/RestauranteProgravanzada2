@model IEnumerable<ProyectoRestaurante.Models2.Recomendacion>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Comentario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdPlatoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Comentario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdNavigation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPlatoNavigation.IdPlato)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdRecomendacion">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdRecomendacion">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdRecomendacion">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
