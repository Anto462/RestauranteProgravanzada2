@model ProyectoRestaurante.Models2.Recomendacion

<h1 style="text-shadow: -1px 0px 6px #D4AF37;">Editar</h1>

<h4>Recomendacion</h4>
<hr />
<div class="row centrar">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdRecomendacion" />
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <select asp-for="Id" class="form-control" asp-items="ViewBag.Id"></select>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdPlato" class="control-label"></label>
                <select asp-for="IdPlato" class="form-control" asp-items="ViewBag.IdPlato"></select>
                <span asp-validation-for="IdPlato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comentario" class="control-label"></label>
                <input asp-for="Comentario" class="form-control" />
                <span asp-validation-for="Comentario" class="text-danger"></span>
            </div>
            <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-dark" />
                </div>
        </form>
    </div>
</div>

    <div>
        <a asp-action="Index" class="btn btn-dark">Volver</a>
    </div>

