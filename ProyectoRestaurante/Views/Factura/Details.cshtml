@model ProyectoRestaurante.Models2.Factura

<section class="detalles">
    <br>
    <br>
    <br>
    <h1 class="mb-4" style="text-shadow: -1px 0px 6px #D4AF37;">Detalles</h1>
    <div class="container mt-4">
        <h4 class="mb-4">Detalles de la Factura</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Numero de Factura</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.IdFactura)</dd>

            <dt class="col-sm-2">Fecha Factura</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.FechaFactura)</dd>

            <dt class="col-sm-2">Hora Factura</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.HoraFactura)</dd>

            <dt class="col-sm-2">Numero de orden Orden</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.IdDordenNavigation.IdOrden)</dd>

            <dt class="col-sm-2">Colaborador</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.IdNavigation.UserName)</dd>

            <dt class="col-sm-2">Costo de factura</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Costototal)</dd>

        </dl>

        <div class="mt-4">
            <a class="btn btn-dark" asp-action="Edit" asp-route-id="@Model?.IdFactura">Editar</a>
            <a class="btn btn-dark" asp-action="Index">Volver</a>
        </div>
    </div>
    <br>
    <br>
    <br>
</section>
